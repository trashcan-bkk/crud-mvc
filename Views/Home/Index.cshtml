@using Microsoft.AspNetCore
@model IEnumerable<crud_mvc.Models.Content>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1><b>Simple CRUD application</b></h1>
    <p>by Trashcan</p>
</div>

<!-- Latest contents -->
<Section>
    <div class="col-12">
        <div class="container">
            <h2><b>Latest</b></h2>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img src="@item.CoverImg">
                            <div class="card-body">
                                <a href="contents/@Html.DisplayFor(modelItem => item.Id)" class="card-text"><b>@item.Title</b></a>
                                <p>@item.Author</p>
                                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to
                                    additional content. This content is a little bit longer.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="contents/@Html.DisplayFor(modelItem => item.Id)" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                    </div>
                                    <small class="text-muted">@item.CreatedDate</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <a asp-controller="Content" asp-action="Index" class="btn btn-success form-control">View all</a>
        </div>
    </div>
</Section>

<hr>

<!-- Feedback -->
<section class="mt-3">
    <div class="col-12">
        <div class="container">
            <h2><b>Tell us something...</b></h2>
            <div class="row">
                <div class="col-md-6">
                    @using (Html.BeginForm("AddFeedback", "Home", FormMethod.Post))
                    {
                        <form>
                            <div class="form-group">
                                <textarea class="form-control" name="Message" id="Message" rows="4"
                                placeholder="Type here" required></textarea>
                                <div class="input-group mt-3 mb-3">
                                    <input type="text" class="form-control mr-3" name="Name" id="Name" placeholder="Name"
                                    required>
                                    <input type="email" class="form-control" name="Contact" id="Contact"
                                    placeholder="E-mail" required>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success form-control">Submit</button>
                        </form>
                    }
                </div>
                <div class="col-md-6">
                    <div class="card" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-5">
                                <img src="~/img/trashcan.png" style="height: 100%; width: 100%;">
                            </div>
                            <div class="col-md-7">
                                <div class="card-body">
                                    <h5 class="card-title">Hello World ! </h5>
                                    <p class="card-text">We would be happy if you leave us a comment here : )</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
